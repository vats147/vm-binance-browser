{
    "manifest_version": 3,
    "name": "Binance Arbitrage Helper",
    "version": "1.0.0",
    "description": "Helper extension for Binance Funding History Arbitrage Data",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://www.binance.com/*",
        "https://binance.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.binance.com/*",
                "https://binance.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}